#Write your name and class into a file named intro.txt.
with open("intro.txt","w") as intro:
    intro.write("Name: kajal \n class: 12th passout")
    print("intro.txt file created successfully.")

#create a flie goals.txt and write your three goals for this month.
with open("goals.txt","w") as goals:
    goals.write("1. Learn Python programming.\n2. Read 3 books.\n3. Exercise regularly.")
    print("goals.txt file created successfully.")
#append "completed" to an exxisting file status.txt.
with open("status.txt","a") as status:
    status.write("\ncompleted")
    print("Appended 'completed' to status.txt successfully.")

#use with to read the entire content of info.txt.
with open("info.txt","r") as info:
    data = info.read()
    print("Content of info.txt:",data)
#use with to write "Hello World!" in hello.txt.
with open("hello.txt","w") as hello:
    hello.write("Hello World!")
    print("Wrote 'Hello World!' to hello.txt successfully.")

